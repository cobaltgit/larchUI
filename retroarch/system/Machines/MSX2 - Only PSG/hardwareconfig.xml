<?xml version="1.0" ?>
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer></manufacturer>
    <code>MSX2 Only PSG</code>
    <release_year></release_year>
    <description/>
    <type>MSX2</type>
  </info>

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
    </PPI>

    <VDP id="VDP">
      <version>V9938</version>
      <vram>128</vram>
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
    </VDP>

    <PSG id="PSG">
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <RTC id="Real time clock">
      <sramname>msx2o.cmos</sramname>
      <io base="0xB4" num="2" type="O"/>
      <io base="0xB5" num="1" type="I"/>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <V9990 id="Sunrise GFX9000">
      <io base="0x60" num="0x10"/>
    </V9990>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>msx2.rom</filename>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="2">

      <secondary slot="2">
        <PAC id="PanaSoft SW-M001 PAC">
          <mem base="0x4000" size="0x4000"/>
          <sramname>msx2o.pac</sramname>
        </PAC>
      </secondary>

      <secondary slot="3">
        <MegaRam id="MegaRam">
          <io base="0x8e" num="1"/>
          <mem base="0x0000" size="0x10000"/>
          <size>2048</size>
        </MegaRam>
      </secondary>

    </primary>

    <primary slot="3">

      <secondary slot="1">
        <ROM id="MSX Sub ROM">
          <rom>
            <filename>msx2ext.rom</filename>
          </rom>
          <mem base="0x0000" size="0x4000"/>
        </ROM>
        <WD2793 id="Memory Mapped FDC">
          <broken_fdc_read>false</broken_fdc_read>
          <drives>2</drives>
          <rom>
            <filename>philipsdisk.rom</filename>
          </rom>
          <mem base="0x4000" size="0x8000"/>
        </WD2793>
      </secondary>

      <secondary slot="2">
        <MemoryMapper id="Main RAM">
          <size>2048</size>
          <mem base="0x0000" size="0x10000"/>
        </MemoryMapper>
      </secondary>

      <secondary slot="3">
        <ROM id="MSX Turbo-Basic 2">
          <rom>
            <filename>xbasic2.rom</filename>
          </rom>
          <mem base="0x4000" size="0x8000"/>
        </ROM>        
      </secondary>

    </primary>

  </devices>

</msxconfig>
